            $("#inpt_fecha").hide();
            $("#div_inpt_hora").hide();
            $("#inpt_hora").hide();
            $("#div_inpt_lugar").hide();
            $("#inpt_lugar").hide();
            $("#div_inpt_afp").hide();
            $("#inpt_afp").hide();
            $("#div_inpt_ram").hide();
            $("#inpt_ram").hide();
            $("#div_AResultado").hide();
            $("#ResultSel").hide();
            $("#div_AMotivo").hide();
            $("#MotivoSel").hide();
            $("#inpt_cuspp").hide();
            $("#inpt_etapa").hide();
            $("#inpt_cuspp").val(cuspp);
            $("#inpt_etapa").val(etapa);
            var url_accion = '{{ path("proc_accion_listar", {'etapa': 'v_etapa'}) }}';
