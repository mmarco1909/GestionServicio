        function registra_accion(cuspp, nombre, etapa) {
            $("#dialog-form-accion").dialog("open");
            $("#campos_val").hide();
            $('#AccionSel').html('<option value="">Cargando...</option>');
            $("#div_Acuspp").html(cuspp);
